<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginRegular"
    android:background="@drawable/background_white"
    app:cardCornerRadius="@dimen/itemCornerRadius"
    app:cardElevation="@dimen/itemElevationRest">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipeItemHeight">

        <ImageView
            android:id="@+id/recipeImageHolder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.6"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toEndOf="@id/recipeImage"
            app:layout_constraintStart_toStartOf="@id/recipeImage"
            app:layout_constraintTop_toTopOf="@id/recipeImage"
            tools:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/recipeType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/recipeImageOver"
            android:layout_width="0dp"
            android:layout_height="@dimen/paddingLarge"
            android:background="@drawable/over_dark_bottom"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/recipeFavorite"
            android:layout_width="@dimen/iconMediumSize"
            android:layout_height="@dimen/iconMediumSize"
            android:layout_margin="@dimen/marginMedium"
            android:background="@drawable/background_white_round"
            android:elevation="@dimen/itemElevationPressed"
            android:padding="@dimen/paddingRegular"
            android:scaleType="centerInside"
            android:tint="@color/favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/favorite_on" />

        <ImageView
            android:id="@+id/recipePreparationIcon"
            android:layout_width="@dimen/iconRegularSize"
            android:layout_height="@dimen/iconRegularSize"
            android:layout_marginLeft="@dimen/marginMedium"
            android:layout_marginBottom="@dimen/marginMedium"
            android:src="@mipmap/preparation"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/recipePreparation"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSmall"
            android:padding="@dimen/paddingSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/textSmall"
            app:layout_constraintBottom_toBottomOf="@id/recipePreparationIcon"
            app:layout_constraintStart_toEndOf="@id/recipePreparationIcon"
            app:layout_constraintTop_toTopOf="@id/recipePreparationIcon"
            tools:text="25 min." />

        <ImageView
            android:id="@+id/recipeCookingIcon"
            android:layout_width="@dimen/iconRegularSize"
            android:layout_height="@dimen/iconRegularSize"
            android:layout_marginRight="@dimen/marginSmall"
            android:layout_marginBottom="@dimen/marginMedium"
            android:src="@mipmap/cooking"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toStartOf="@id/recipeCooking" />

        <TextView
            android:id="@+id/recipeCooking"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginMedium"
            android:padding="@dimen/paddingSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/textSmall"
            app:layout_constraintBottom_toBottomOf="@id/recipeCookingIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/recipeCookingIcon"
            tools:text="40 min." />

        <TextView
            android:id="@+id/recipeType"
            style="@style/TextStyleRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginMedium"
            android:layout_marginTop="@dimen/marginRegular"
            android:layout_marginRight="@dimen/marginMedium"
            android:layout_marginBottom="@dimen/marginRegular"
            android:textSize="@dimen/textSmall"
            app:layout_constraintBottom_toTopOf="@id/recipeName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipeImage"
            tools:text="Recipe Type"
            tools:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/recipeName"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginMedium"
            android:layout_marginRight="@dimen/marginMedium"
            android:layout_marginBottom="@dimen/marginRegular"
            android:autoSizeMaxTextSize="@dimen/textBig"
            android:autoSizeMinTextSize="@dimen/textSmall"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="2"
            android:textSize="@dimen/textBig"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Recipe Name" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>