<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/editTitleHeader"
        style="@style/EditRecipeTitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/editTitleHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTitleField"
        style="@style/EditRecipeEditStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginMedium"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTitleHeader" />

    <TextView
        android:id="@+id/editTitleFieldExtra"
        style="@style/TextStyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/editElevation"
        android:padding="@dimen/paddingSmall"
        android:text="@string/editTitleMinSize"
        android:textColor="@color/red"
        android:textSize="@dimen/textTiny"
        app:layout_constraintBottom_toBottomOf="@id/editTitleField"
        app:layout_constraintEnd_toEndOf="@id/editTitleField" />

</android.support.constraint.ConstraintLayout>