<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ingredientRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buttonHeight"
    android:background="@drawable/background_accent"
    android:padding="@dimen/paddingRegular">

    <ImageView
        android:id="@+id/editIngredientAddIcon"
        android:layout_width="@dimen/iconSmallSize"
        android:layout_height="@dimen/iconSmallSize"
        android:padding="@dimen/paddingSmall"
        android:scaleType="centerInside"
        android:src="@mipmap/add"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginRegular"
        android:text="@string/editIngredientAdd"
        android:textColor="@color/white"
        android:textSize="@dimen/textRegular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editIngredientAddIcon"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>