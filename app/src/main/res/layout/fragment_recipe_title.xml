<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/recipeTitleHeader"
        style="@style/TextStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginMedium"
        android:layout_marginTop="@dimen/marginLarge"
        android:layout_marginRight="@dimen/marginMedium"
        android:lineSpacingExtra="@dimen/paddingRegular"
        android:text="@string/editTitleHeader"
        android:textColor="@color/light"
        android:textSize="@dimen/textLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/recipeTitleContent"
        style="@style/EditStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginMedium"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textMultiLine"
        android:textSize="@dimen/textMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recipeTitleHeader" />

    <TextView
        android:id="@+id/recipeTitleExtra"
        style="@style/TextStyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginRegular"
        android:layout_marginRight="@dimen/marginSmall"
        android:lineSpacingExtra="@dimen/paddingRegular"
        android:text="@string/editTitleMinSize"
        android:textColor="@color/light"
        android:textSize="@dimen/textSmall"
        app:layout_constraintEnd_toEndOf="@id/recipeTitleContent"
        app:layout_constraintTop_toBottomOf="@id/recipeTitleContent" />

</android.support.constraint.ConstraintLayout>