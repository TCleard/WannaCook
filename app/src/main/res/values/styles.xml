<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/light</item>
        <item name="android:colorBackground">@color/mainBackground</item>
        <item name="android:textAppearance">@style/DefaultTextStyle</item>
        <item name="android:textAppearanceButton">@style/ButtonStyle</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/bold</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarItemStyle</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ToolbarSubtitleStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ToolbarItemStyle">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/bold</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DefaultTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/textRegular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextStyleBold" parent="@style/DefaultTextStyle">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/bold</item>
    </style>

    <style name="TextStyleRegular" parent="@style/DefaultTextStyle">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/regular</item>
    </style>

    <style name="EditStyle" parent="@style/DefaultTextStyle">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorHint">@color/lightAlpha</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/editElevation</item>
        <item name="android:paddingTop">@dimen/editVerticalPadding</item>
        <item name="android:paddingBottom">@dimen/editVerticalPadding</item>
        <item name="android:paddingLeft">@dimen/editHorizontalPadding</item>
        <item name="android:paddingRight">@dimen/editHorizontalPadding</item>
        <item name="android:background">@drawable/background_edit</item>
    </style>

    <style name="ButtonStyle" parent="DefaultTextStyle">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/buttonElevation</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogButtonStyle" parent="TextStyleBold">
        <item name="android:background">@drawable/foreground_light_rounded</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">@dimen/marginMedium</item>
        <item name="android:paddingTop">@dimen/paddingRegular</item>
        <item name="android:paddingBottom">@dimen/paddingRegular</item>
        <item name="android:paddingLeft">@dimen/paddingRegular</item>
        <item name="android:paddingRight">@dimen/paddingRegular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <!-- EditRecipeStyles -->

    <style name="EditRecipeTitleStyle" parent="TextStyleBold">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">@dimen/marginLarge</item>
        <item name="android:layout_marginRight">@dimen/marginMedium</item>
        <item name="android:layout_marginLeft">@dimen/marginMedium</item>
        <item name="android:lineSpacingExtra">@dimen/paddingRegular</item>
    </style>

    <style name="EditRecipeEditStyle" parent="EditStyle">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

</resources>
