<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="@android:integer/config_shortAnimTime"
        app:interpolator="easeOut">

        <OnClick app:target="@id/recipeReduce" />

    </Transition>

    <ConstraintSet
        android:id="@+id/start"
        app:pathMotionArc="startHorizontal">

        <Constraint
            android:id="@id/recipeImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeImageBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeBack"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:layout_marginTop="@dimen/statusBarHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeBackAlpha"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/recipeBack"
            app:layout_constraintEnd_toEndOf="@id/recipeBack"
            app:layout_constraintStart_toStartOf="@id/recipeBack"
            app:layout_constraintTop_toTopOf="@id/recipeBack" />

        <Constraint
            android:id="@id/recipeReduce"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:rotation="-180"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@id/recipeReduceAlpha"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:alpha="0"
            android:rotation="-180"
            app:layout_constraintBottom_toBottomOf="@id/recipeReduce"
            app:layout_constraintEnd_toEndOf="@id/recipeReduce"
            app:layout_constraintStart_toStartOf="@id/recipeReduce"
            app:layout_constraintTop_toTopOf="@id/recipeReduce" />

        <Constraint
            android:id="@id/recipeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginMedium"
            android:layout_marginEnd="@dimen/marginMedium"
            android:layout_marginBottom="@dimen/marginMedium"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toStartOf="@id/recipeReduce"
            app:layout_constraintStart_toStartOf="parent">

            <CustomAttribute
                app:attributeName="maxLines"
                app:customIntegerValue="2" />

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@id/recipeImage"
            android:layout_width="0dp"
            android:layout_height="@dimen/statusToolbarHeight"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeImageBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/recipeImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeBack"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:layout_marginTop="@dimen/statusBarHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeBackAlpha"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="@id/recipeBack"
            app:layout_constraintEnd_toEndOf="@id/recipeBack"
            app:layout_constraintStart_toStartOf="@id/recipeBack"
            app:layout_constraintTop_toTopOf="@id/recipeBack" />

        <Constraint
            android:id="@id/recipeReduce"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:layout_marginTop="@dimen/statusBarHeight"
            android:rotation="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recipeReduceAlpha"
            android:layout_width="@dimen/toolbarButtonSize"
            android:layout_height="@dimen/toolbarButtonSize"
            android:alpha="1"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="@id/recipeReduce"
            app:layout_constraintEnd_toEndOf="@id/recipeReduce"
            app:layout_constraintStart_toStartOf="@id/recipeReduce"
            app:layout_constraintTop_toTopOf="@id/recipeReduce" />

        <Constraint
            android:id="@id/recipeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginRegular"
            android:layout_marginEnd="@dimen/marginRegular"
            app:layout_constraintBottom_toBottomOf="@id/recipeBack"
            app:layout_constraintEnd_toStartOf="@id/recipeReduce"
            app:layout_constraintStart_toEndOf="@id/recipeBack"
            app:layout_constraintTop_toTopOf="@id/recipeBack">

            <CustomAttribute
                app:attributeName="maxLines"
                app:customIntegerValue="1" />

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/dark" />

        </Constraint>

    </ConstraintSet>

</MotionScene>